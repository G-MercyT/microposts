<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %> <!--ここを追加-->

    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.label :email %>
    <%= f.text_field :email %>
    
    <%= f.label :description %>
    <%= f.text_area :description, :maxlength => "140" %>
    
    <%= f.label :area %>
    <%= f.text_field :area, :maxlength => "30" %>
    
    <%= f.submit "Updatee my account", class: "btn btn-large btn-primary" %>
<% end %>