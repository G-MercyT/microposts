<h1><%= t('view.signup') %></h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %> <!--ここを追加-->
        
            <%= f.label :name, t('view.name') %>
            <%= f.text_field :name %>
            
            <%= f.label :email, t('view.email') %>
            <%= f.text_field :email %>
            
            <%= f.label :password, t('view.password') %>
            <%= f.password_field :password %>
            
            <%= f.label :password_confirmation, t('view.confirmation') %>
            <%= f.password_field :password_confirmation %>
            
            <%= f.submit t('view.createmycount'), class: "btn btn-large btn-primary" %>
        <% end %>
    </div>
</div>