<% if current_user != @user %>
    <div id="favorite_form">
        <% if current_user.favorite?(@micropost) %>
            <%= render partial: 'users/unfavorite', locals: {micropost: micropost} %>
        <% else %>
            <%= render partial: 'users/favorite', locals: {micropost: micropost} %>
        <% end %>
    </div>
<% end %>